<constraints>
  <!-- Default 20GB for binary packages -->
  <overwrite>
    <conditions>
<package>kernel-debug</package>
<package>kernel-default</package>
<package>kernel-lpae</package>
<package>kernel-vanilla</package>
<package>kernel-zfcpdump</package>
    </conditions>
    <hardware>
      <disk>
        <size unit="G">25</size>
      </disk>
      <memory>
        <size unit="G">2</size>
      </memory>
    </hardware>
  </overwrite>

  <!-- 8GB for kernel-source -->
  <overwrite>
    <conditions>
      <package>kernel-source</package>
      <package>kernel-source-rt</package>
    </conditions>
    <hardware>
      <disk>
        <size unit="G">8</size>
      </disk>
    </hardware>
  </overwrite>

  <!-- 10GB for binary package on s390x -->
  <overwrite>
    <conditions>
      <arch>s390x</arch>
<package>kernel-debug</package>
<package>kernel-default</package>
<package>kernel-lpae</package>
<package>kernel-vanilla</package>
<package>kernel-zfcpdump</package>
    </conditions>
    <hardware>
      <disk>
        <size unit="G">10</size>
      </disk>
    </hardware>
  </overwrite>

  <!-- 8 CPUs for binary packages on x86 -->
  <overwrite>
    <conditions>
      <arch>i586</arch>
      <arch>x86_64</arch>
<package>kernel-debug</package>
<package>kernel-default</package>
<package>kernel-lpae</package>
<package>kernel-vanilla</package>
<package>kernel-zfcpdump</package>
    </conditions>
    <hardware>
      <processors>8</processors>
    </hardware>
  </overwrite>

  <!-- 4 CPUs for binary packages on POWER -->
  <overwrite>
    <conditions>
      <arch>ppc</arch>
      <arch>ppc64</arch>
      <arch>ppc64le</arch>
<package>kernel-debug</package>
<package>kernel-default</package>
<package>kernel-lpae</package>
<package>kernel-vanilla</package>
<package>kernel-zfcpdump</package>
    </conditions>
    <hardware>
      <processors>4</processors>
    </hardware>
  </overwrite>

  <overwrite>
    <conditions>
      <arch>i586</arch>
      <arch>x86_64</arch>
      <package>kernel-obs-qa</package>
    </conditions>
    <sandbox>kvm</sandbox>
  </overwrite>

  <overwrite>
    <conditions>
      <arch>i586</arch>
      <arch>x86_64</arch>
      <package>kernel-obs-qa-xen</package>
    </conditions>
    <sandbox>xen</sandbox>
  </overwrite>
</constraints>

